[{
  "requirements": [
    { "bin": "parallel", "install": "apt install parallel -y" },
    { "bin": "pyxss", "install": "pipx install --force git+https://github.com/rix4uni/pyxss.git" },
    { "bin": "unew", "install": "go install github.com/rix4uni/unew@latest" }
  ],
  "command": [
    "cat ${INPUT} | unew -q -split 10000 xsschecker_split.txt",
    "parallel --ungroup -j6 \"cat {} | pyxss --silent --no-color -o {= s:xsschecker_split:xss: =}\" ::: xsschecker_split*.txt",
    "cat xss[0-9]*.txt | egrep -av 'NOT VULNERABLE:' | unew -el -ef -q ${OUTPUT}"
  ],
  "example": "garudrecon workflow pyxss --input domain.com.xsschecker --output domain.com.pyxss",
  "description": "Check XSS False Positive with pyxss"
}]