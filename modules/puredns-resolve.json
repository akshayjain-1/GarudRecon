[{
  "requirements": [
    { "bin": "puredns", "install": "gocl -i github.com/d3mondev/puredns" },
    { "bin": "unew", "install": "go install github.com/rix4uni/unew@latest" }
  ],
  "command": [
    "curl -s \"https://raw.githubusercontent.com/rix4uni/resolvers/refs/heads/main/resolvers.txt\" | unew -el -t -q resolvers.txt",
    "curl -s \"https://raw.githubusercontent.com/trickest/resolvers/refs/heads/main/resolvers-trusted.txt\" | unew -el -t -q resolvers-trusted.txt",
    "puredns resolve ${INPUT} -r resolvers.txt --resolvers-trusted resolvers-trusted.txt --skip-sanitize --skip-validation --skip-wildcard-filter --wildcard-tests 0 -w ${OUTPUT}"
  ],
  "example": "garudrecon workflow puredns-resolve -i allsubs.puredns_bruteforce -o allsubs.puredns_resolve",
  "description": "Subdomain Resolving with puredns resolve"
}]