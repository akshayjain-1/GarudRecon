[{
  "requirements": [
    { "bin": "subzy", "install": "gocl -i github.com/rix4uni/subzy" },
    { "bin": "nuclei", "install": "gocl -i github.com/projectdiscovery/nuclei" },
    { "bin": "unew", "install": "go install github.com/rix4uni/unew@latest" }
  ],
  "command": [
    "subzy run --timeout 15 --concurrency 10 --hide_fails --targets ${INPUT} | sed -E 's/\\x1b\\[[0-9;]*m//g' | egrep -av '\\[NOT VULNERABLE\\]' | unew -el ${OUTPUT}",
    "cat ${INPUT} | nuclei -duc -silent -nc -nh -tags takeover -severity info,low,medium,high,critical -retries 3 -rl 150 -t ~/.garudrecon/takeovers | unew -el ${OUTPUT}"
  ],
  "example": "garudrecon workflow mass-subtakeover --input domain.com.httpx --output domain.com.masssubtakeover",
  "description": "Subdomain Takeover with subzy and nuclei"
}]