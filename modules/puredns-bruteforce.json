[{
  "requirements": [
    { "bin": "puredns", "install": "gocl -i github.com/d3mondev/puredns" },
    { "bin": "unew", "install": "go install github.com/rix4uni/unew@latest" }
  ],
  "command": [
    "curl -s \"https://wordlists-cdn.assetnote.io/data/manual/2m-subdomains.txt\" | unew -el -t -q 2m-subdomains.txt",
    "curl -s \"https://raw.githubusercontent.com/rix4uni/resolvers/refs/heads/main/resolvers.txt\" | unew -el -t -q resolvers.txt",
    "puredns bruteforce 2m-subdomains.txt -d ${INPUT} -r resolvers.txt --skip-sanitize --skip-validation --skip-wildcard-filter --wildcard-tests 0 -w ${OUTPUT}"
  ],
  "example": "garudrecon workflow puredns-bruteforce --input all.subs --output allsubs.puredns_bruteforce",
  "description": "Subdomain Permutations with puredns bruteforce"
}]